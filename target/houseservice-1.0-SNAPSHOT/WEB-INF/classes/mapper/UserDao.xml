<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--类名-->
<mapper namespace="com.house.dao.UserDao">
    <!--id:方法名   result：返回值类型-->
    <update id="updateUser" parameterType="com.house.entity.User">
        update tb_user
        <set>
            <if test="enablestatus != null">enable_status=#{enablestatus},</if>
        </set>
        where user_id=#{userid}
    </update>
    <select id="queryUser" resultType="com.house.entity.User">
        select user_id,user_name,user_sex,enable_status,user_phone,create_time,lastedit_time
        from tb_user
    </select>

    <select id="queryUserById" resultType="com.house.entity.User">
        select user_id,user_name,user_sex,enable_status,user_phone,create_time,lastedit_time
        from tb_user
        where user_id=#{userid}
    </select>
</mapper>